apiVersion: ops-box.io/v1
kind: OBRole
metadata:
  name: gitops-viewer
  namespace: ops-box
spec:
  description: "Read-only role created via GitOps"
  permissions:
    - feature: view_rbac_definitions
      target: all
      allowed: true
    - feature: view_env_definitions
      target: all
      allowed: true
    - feature: view_remote_clusters
      target: all
      allowed: true
    - feature: view_events
      target: all
      allowed: true
